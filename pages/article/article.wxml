
<view class="page">
    <view class="atricle_title">
        {{article.title}}
    </view>
    <view class="article_info">
        <view style="height: 20px;width: 20px;border-radius: 25px;">
            <image style="width: 20px; height: 20px;border-radius: 50%;overflow:hidden;"src="{{article.avatar}}" mode='aspectFill'></image>
        </view>
        <view class="name">{{article.nickname}}</view>
        <view class="time">{{article.create_time}}</view>
    </view>
    <view>
        <image style="width: 100%;"src="{{article.main_image}}" mode='aspectFit'></image>
    </view>
    <view>
        <text>{{article.content}}</text>
    </view>
</view>