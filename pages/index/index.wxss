page{
    background: rgb(216, 216, 216);
}
.w100{
    width: 100%;
}
.scroll_outside{
    position:relative;
}
.scroll{
    display: flex;
    white-space:nowrap;
    position:absolute;
    z-index:1;
}
.scroll_top{
    display: flex;
    white-space:nowrap;
    position:fixed;
    top:0rpx;
    z-index: 1;
}
.scroll_item{
    display: inline-block;
    vertical-align:middle;
    width: 120rpx;
    height: 75rpx;
    background-color: rgb(255, 255, 255);
    text-align: center;
    line-height: 75rpx;
    font-size: 30rpx;
    color: rgb(179, 179, 179);
    transition: font-size 0.2s, width 0.2s;
}
.selected{
    font-size: 35rpx;
    color:black;
    width: 140rpx;
}
.articles{
    margin-top: 90rpx;
}
.article{
    display: inline-block;
    width: 100%;
    height: 200rpx;
    background-color: green;
    padding: 20rpx 20rpx 20rpx 20rpx;
}
    