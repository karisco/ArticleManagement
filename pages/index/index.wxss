page{
    background: rgb(218, 218, 218);
}
::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}
.w100{
    width: 100%;
}
.scroll_outside{
    height: 75rpx;
    position:relative;
}
.scroll{
    display: flex;
    white-space:nowrap;
    position:absolute;
    z-index:1;
}
.scroll_top{
    display: flex;
    white-space:nowrap;
    position:fixed;
    top:0rpx;
    z-index: 1;
}
.scroll_item{
    display: inline-block;
    vertical-align:middle;
    width: 120rpx;
    height: 75rpx;
    background-color: rgb(255, 255, 255);
    text-align: center;
    line-height: 75rpx;
    font-size: 30rpx;
    color: rgb(179, 179, 179);
    transition: font-size 0.2s, width 0.2s;
}
.selected{
    font-size: 35rpx;
    color:red;
}
.flushType{
    color: black;
}
.articles{
    margin-top: 80rpx;
}
.article{
    display: flex;
    flex-wrap: wrap;
    width: 100%;
    height: 200rpx;
    padding: 5rpx 20rpx;
    background-color: rgb(255, 255, 255);
    margin-bottom: 5rpx;
}
.article_title{
    height: 140rpx;
}
.article_info{
    display: flex;
    height: 56rpx;
    line-height: 60rpx;
}
.article_avatar{
    width: 10%;
    align-items: center;
    vertical-align: center;
    justify-content: center; 
}
.article_name{
    color: rgb(172, 172, 172);
    font-size: 15px;
    width: 45%;
}
.article_time{
    width: 45%;
}
.article_image{
    display: inline-block;
    width: 40%;
    height: 200rpx;
}
