<view class="app">
    <swiper autoplay="true" circular="true" >
        <block wx:for='{{img}}' wx:key="key">
            <swiper-item>
                <image class="w100" src="{{item}}" mode="widthFix" ></image>
            </swiper-item>
        </block>
    </swiper>
    <view class='scroll_outside'>
        <scroll-view scroll-x class="{{scrollTop>150 ? 'scroll_top' : 'scroll'}}">
            <view wx:for="{{item}}" wx:key="key" class = "scroll_item {{plate==item.id?'selected':''}}"  bindtap="selected" data-id="{{item.id}}">{{item.name}}</view>
        </scroll-view>
    </view>
    <view class="articles">
        <view class="article" wx:for="{{10}}" wx:key="key" ></view>
    </view>
</view>
